;=============================================================================
; vgr_parse_inst
;
;=============================================================================
function vgr_parse_inst, inst, cam=cam

 sc = 'vg2'
 if(strmid(inst, 0, 4) EQ 'VGR1') then sc = 'vg1'
 cam = strlowcase(strmid(inst, 9, 2))

 return, sc
end
;=============================================================================
