;==============================================================================
; orb_compute_r
;
;==============================================================================
function orb_compute_r, rx

 ta = orb_compute_ta(rx)
 sma = orb_get_sma(rx)
 ecc = orb_get_ecc(rx)

 r = sma*(1d - ecc^2) / (1d + ecc*cos(ta))

 return, r
end
;==============================================================================
