; isnum
;
;===============================================================================
function isnum, x

 if(NOT defined(x)) then return, 0
 
 case size(x, /type) of
  0: return, 0
  7: return, 0
  8: return, 0
  10: return, 0
  11: return, 0
  else: return, 1
 endcase

end
