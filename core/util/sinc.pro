;==============================================================================
; sinc
;
;==============================================================================
function sinc, x, norm=norm

 y = x & y[*] = 1

 w = where(x NE 0)
 if(w[0] NE -1) then y[w] = sin(x[w])/x[w]

 mag = 1d

 if(keyword_set(norm)) then mag = !dpi

 return, y/mag
end
;==============================================================================
