;=============================================================================
; arrmatch
;
;=============================================================================
function arrmatch, x1, x2

 n1 = n_elements(x1)
 n2 = n_elements(x2)
 if(n1 NE n2) then return, 0

 w = where(x1 NE x2)
 if(w[0] NE -1) then return, 0

 return, 1
end
;=============================================================================
