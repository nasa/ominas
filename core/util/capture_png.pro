pro capture_png, filename

 r = tvrd(channel=1)
 g = tvrd(channel=2)
 b = tvrd(channel=3)
 s = size(r)
 im = bytarr(3,s[1],s[2])
 im[0,*,*] = r
 im[1,*,*] = g
 im[2,*,*] = b

 write_png, filename, im

end
