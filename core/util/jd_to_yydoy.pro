function jd_to_yydoy, jd

 caldat, jd, mm, dd, yy, hh, min, ss


 doy = round(jd - julday(1, 1, yy, hh, min, ss))

 result = strtrim(yy,2) + '-' + strtrim(doy,2)

 return, result
end
