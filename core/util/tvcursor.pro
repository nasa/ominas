     if(test_endian()) then byteorder, mask, bitmap, /htons

     device, cursor_mask=mask, cursor_image=bitmap, cursor_xy = [7,8]
    end
  end $
 else if(keyword__set(restore)) then device, /cursor_crosshair




end
