;===============================================================================
; min_angle
;
;===============================================================================
function min_angle, theta1, theta2

 twopi = 2d*!dpi

 a1 = abs(theta1-theta2)
 a2 = abs((theta1+twopi) - theta2)
 a3 = abs(theta1 - (theta2+twopi))

 return, min([a1, a2, a3])
end
;===============================================================================
