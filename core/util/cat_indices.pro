;==============================================================================
; cat_indices
;
;==============================================================================
function cat_indices, indices

 ii = indices

 w = where(ii NE -1)
 if(w[0] EQ -1) then return, -1

 ii = ii[w]
 ii = ii[sort(ii)]
 ii = ii[uniq(ii)]

 return, ii
end
