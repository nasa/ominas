; _pnt_assign.include
;  implemented as a .include because arg_present does not propagate to 
;  lower-level calls

 if(keyword_set(points)) then pnt_set_points, _xd, points, /noevent
 if(keyword_set(vectors)) then pnt_set_vectors, _xd, vectors, /noevent
 if(defined(flags)) then pnt_set_flags, _xd, flags, /noevent
 if(defined(desc)) then pnt_set_desc, _xd, desc, /noevent
 if(defined(data)) then pnt_set_data, _xd, data, /noevent
 if(defined(tags)) then pnt_set_tags, _xd, tags, /noevent
 if(defined(assoc_xd)) then pnt_set_assoc_xd, _xd, assoc_xd, /noevent

@cor_assign.include
